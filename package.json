{
  "name": "voice-enricher-desktop",
  "version": "1.1.0",
  "private": true,
  "main": "electron/main.cjs",
  "description": "Desktop app: Hotkey -> speech -> transcript -> AI enrichment (Ollama default, optional cloud providers)",
  "author": "Johann Dirschl, www.dirschl.com",
  "scripts": {
    "dev": "concurrently -k \"next dev -p 3000\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "next build",
    "start": "next start -p 3000",
    "electron": "electron .",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "electron-store": "^8.1.0",
    "next": "14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.5.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.voice-enricher.desktop",
    "productName": "Voice Enricher",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": ".next/standalone"
      },
      {
        "from": ".next/static",
        "to": ".next/standalone/.next/static"
      },
      {
        "from": "public",
        "to": ".next/standalone/public"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Voice Enricher benötigt Mikrofon-Zugriff für die Sprachaufnahme und Transkription."
      }
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
